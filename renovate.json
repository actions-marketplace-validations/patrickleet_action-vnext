{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "RUN ubi --project (?<depName>.*) --tag (?<currentValue>.*?) --in /usr/local/bin/"
      ],
      "datasourceTemplate": "github-releases",
      "registryUrlTemplate": "https://github.com"
    }
  ]
}
